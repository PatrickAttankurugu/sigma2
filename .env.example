# Google API Configuration
GOOGLE_API_KEY=your_google_api_key_here

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501,http://127.0.0.1:8501

# Database Configuration
# DATABASE_URL=sqlite:///azuma.db  # Default SQLite (uncomment to override)
# DATABASE_URL=postgresql://user:pass@localhost/azuma  # PostgreSQL example

# Cache Configuration
CACHE_TTL_HOURS=24
MAX_CACHE_SIZE=1000

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Feature Flags
ENABLE_CODE_PLAYGROUND=true
ENABLE_VOICE_INTERACTION=false
ENABLE_ANALYTICS=true